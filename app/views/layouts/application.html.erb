<!DOCTYPE html>
<html>
  <head>
    <title>Desks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-light bg-faded">
        <ul class="nav navbar-nav">
          <li class="nav-item active">
            <h3>
            <a class="nav-link" href="<%= posts_path %>"><%= t('posts.posts') %></a>
          </h3>
        </li>
        </ul>
       <%= form_tag posts_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Поиск", class: 'btn btn-outline-primary pull-xs-right'%>
      <% end %>
        <%= link_to 'Добавить объявление', new_post_path, class: 'btn btn-outline-primary' %>
         <ul class="navbar-nav pull-xs-right">
              <% if user_signed_in? %>
                  <li> 
                
                  <%= current_user.email %>
                </li>
                <li>
                  <%= link_to "Настройки", edit_user_registration_path %>                
                  <%= link_to "Выйти", destroy_user_session_path, method: :delete, class: "nav-link" %>
                  </li>
              <% else %>
                  <li>
                  <%= link_to "Регистрация", new_user_registration_path, class: "nav-link" %>
                  </li> 
                  <li>
                  <%= link_to "Войти", new_user_session_path, class: "nav-link" %>
                  </li> 
              <% end %>
        </ul>
      </nav>

    </div>
      <div class="container main">
    <div class="row">
        <div class="col-md-12">
         <% flash.each do | name, message| %>
        <div class="alert <%= bootstrap_class_for(name) %>">
          <button type="close" data-dismiss="alert">&times;</button>>
          <%= message %>
        </div>
        <% end %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-9">
            <%= yield %>
      
    </div>
    <div class="col-md-3">
       <%= t('common.tag') %></br>
        <% tag_cloud(Tag.counts, %w{tag1 tag2 tag3 }) do |tag, css_class| %>
        <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
    </div>
  </body>
</html>
